<h1>Listing parts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Offstock</th>
    <th>Retail cost</th>
    <th>Final cost</th>
  </tr>

<% @parts.each do |part| %>
  <tr>
    <td><%=h part.title %></td>
    <td><%=h part.offstock %></td>
    <td><%=h part.retail_cost %></td>
    <td><%=h part.final_cost %></td>
    <td><%= link_to 'Show', part %></td>
    <td><%= link_to 'Edit', edit_part_path(part) %></td>
    <td><%= link_to 'Destroy', part, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New part', new_part_path %>